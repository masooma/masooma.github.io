<div class = "subjects edit">

<h2 style="text-align:center;">Update Subject</h2><br />

<%= link_to "<-- Back to Main Page", {:action => "index"} %><br /><br /><br />

<%= form_for(:subject, :url => {:action => 'update', :id => @subject.id}) do |f| %>

<table summary = "update subject" >

<tr>
	<th>Name</th>
	<td> <%= f.text_field(:name) %> </td>
</tr>
<tr>
	<th>Position</th>
	<td> <%= f.text_field(:position) %> </td>
</tr>

<tr>
	<th>Visible</th>
	<td> <%= f.text_field(:visible) %> </td>
</tr>

</table>

<div >
<%= submit_tag("Update Subject") %>
</div>

<% end %>

</div>