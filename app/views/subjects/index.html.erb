<% if !flash[:notice].blank? %>
	<div>
	<%= flash[:notice] %>
	</div>
<%end%>

<div class = "subjects index">

	<h2 style="text-align:center;">Subjects Main Page</h2><br /><br />

		<table summary="Subjects List" align="center" cellpadding="25px" style="font-family:chambria; text-align:center; text-decoration:none;">
			<tr style="color:#000080; border:1px solid black;">
				<th>Sr.</th>
				<th>Subject</th>
				<th>Visible</th>
				<th>Pages</th>
				<th>Action</th>
			</tr>
			<% @subject.each do |subject| %>
				<tr>
				<td><%= subject.position %></td>
				<td><%= subject.name %></td>
				<td><%= subject.visible ? 'Yes' : 'No' %></td>
				<td><%= subject.pages.size %></td>
				<td>
				<%= link_to "Show", {:action => 'show', :id => subject.id }, :class => 'action show' %>
				<%= link_to "Edit", {:action => 'edit', :id => subject.id }, :class => 'action edit' %>
				<%= link_to "Delete", {:action => 'delete', :id => subject.id }, :class => 'action delete' %>
				 </td>
				</tr>	
			<%end%>

			<tr>
			<%= link_to "Add New Subject", {:action => 'new'} , :class => 'action new'%>
			</tr>

		</table>

</div>
