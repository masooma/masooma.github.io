<% if !flash[:notice].blank? %>
	<div>
	<%= flash[:notice] %>
	</div>
<%end%>

<div class = "subjects show">

	<h2 style="text-align:center;">Show Subjects Page</h2><br /><br />
<%= link_to "<-- Back to Main Page", {:action => "index"} %>
		<table summary="Subject Record" align="center" cellpadding="15px" style="font-family:chambria; text-align:center; text-decoration:none;">
			<tr style="color:#000080;">
				<th>Position</th>
				<th>Subject</th>
				<th>Visible</th>
				<th>Pages</th>
				<th>Created At</th>
				<th>Updated At</th>
			</tr>
			<tr>
			<td><%= @subject.position %></td>
			<td><%= @subject.name %></td>
			<td><%= @subject.visible ? 'Yes' : 'No' %></td>
			<td><%= @subject.pages.size %></td>
			<td><%= @subject.created_at %></td>
			<td><%= @subject.updated_at %></td>
			</tr>	
		</table>

</div>

